<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/appearance_header">
        <ListPreference
            app:defaultValue="light"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/theme_title"
            app:useSimpleSummaryProvider="true"
            app:summary="@string/theme_summary"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other_settings">
        <Preference
            app:title="@string/clean_cache_btn"
            app:key="btnCleanCache"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/more_setting">
        <PreferenceScreen
            app:title="@string/share_title"
            app:key="share_app"
            app:summary="@string/share_app_summary"
            >
        </PreferenceScreen>
        <PreferenceScreen
            app:title="@string/rate_the_app"
            app:key="rate_app"
            app:summary="@string/rate_app_summary"
            >
        </PreferenceScreen>
        <PreferenceScreen
            app:title="@string/version_title"
            app:key="version"
            app:summary="1.0"
            >
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>

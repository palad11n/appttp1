<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorMy</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorMy</item>
    </style>

    <style name="StartLaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_launch</item>
    </style>

    <style name="DarkStyle">
        <item name="android:background">#000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LightStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
    </style>

    <style name="StyleTaskForList">
        <item name="android:background">@drawable/my_off_shape</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/text_row</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextView.Extra">
        <item name="android:textColor">@color/info_row</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StyleAbout">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="StyleAbout.TextView1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleAbout.ListSite">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleAbout.Footer">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleAbout.Title">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorMy</item>
    </style>

</resources>

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorSecondary">@color/secondary_text</item>
        <item name="colorOnSecondary">@color/secondary_text</item>

        <item name="colorOnPrimary">@color/icons</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/primary_text</item>
    </style>

    <style name="DarkStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorOnSecondary">@color/secondary_text</item>
        <item name="colorSecondaryVariant">@color/secondary_text</item>

        <item name="colorOnPrimary">@color/primary_text</item>
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/primary_text</item>

    </style>

    <style name="LightStyle" parent="AppTheme">
    </style>

    <style name="StartLaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_launch</item>
    </style>

    <style name="StyleTaskForList">
        <item name="android:background">@drawable/my_off_shape</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Extra">
        <!--        <item name="android:textColor">@color/info_row</item>-->
        <item name="android:alpha">0.62</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleAbout">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="StyleAbout.TextView1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleAbout.ListSite">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleAbout.Footer">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleAbout.Title">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorMy</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
